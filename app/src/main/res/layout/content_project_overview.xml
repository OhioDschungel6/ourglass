<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProjectOverview.ProjectOverviewActivity"
    tools:showIn="@layout/app_bar_project_overview">

    <Spinner
        android:id="@+id/spinnerProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/tag_time_spinnerPrompt_project"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/project_recycler"
        app:layout_constraintTop_toBottomOf="@id/spinnerProject"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />
</android.support.constraint.ConstraintLayout>